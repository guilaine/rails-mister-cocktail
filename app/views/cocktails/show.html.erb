<div class="container">
  <div class="row">
    <div class="col-sm-8">
        <h2><%= @cocktail.name %></h2>

        <h3>Ingredients</h3>

        <% @cocktail.doses.each do |dose| %>
          <ul class='list-inline'>
            <li><p><%= dose.description %> of <%= dose.ingredient.name %></p></li>

            <li><%= link_to edit_cocktail_dose_path(@cocktail,dose) do %>
              <i class="fa fa-pencil" aria-hidden="true"></i>
            <% end %></li>


            <li><%= link_to dose_path(dose),method: :delete,
                data: { confirm: "Are you sure?" } do %>
              <i class="fa fa-trash" aria-hidden="true"></i>
            <% end %></li>
          </ul>
        <% end %>

        <br>
        <%= link_to new_cocktail_dose_path(@cocktail) do %>
          <button type="button" class="btn btn-warning">New dose</button>
        <% end %>

        <%= link_to cocktails_path do %>
          <button type="button" class="btn btn-primary">Back</button>
        <% end %>
    </div>
  </div>
</div>
